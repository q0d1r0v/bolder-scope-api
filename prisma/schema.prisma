model CodeGenSnapshot {
  id                        String                   @id @default(uuid()) @db.Uuid
  projectId                 String                   @db.Uuid
  requirementSnapshotId     String?                  @db.Uuid
  wireframeSnapshotId       String?                  @db.Uuid
  techStackRecommendationId String?                  @db.Uuid
  version                   Int
  status                    CodeGenStatus            @default(GENERATED)
  stack                     CodeGenStack
  aiProvider                AiProvider?
  fileCount                 Int                      @default(0)
  codeJson                  Json
  projectStructure          Json?
  assumptions               String?
  createdById               String?                  @db.Uuid
  createdAt                 DateTime                 @default(now())
  updatedAt                 DateTime                 @updatedAt
  project                   Project                  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  requirementSnapshot       RequirementSnapshot?     @relation("CodeGenRequirement", fields: [requirementSnapshotId], references: [id], onDelete: SetNull)
  wireframeSnapshot         WireframeSnapshot?       @relation("CodeGenWireframe", fields: [wireframeSnapshotId], references: [id], onDelete: SetNull)
  techStackRecommendation   TechStackRecommendation? @relation("CodeGenTechStack", fields: [techStackRecommendationId], references: [id], onDelete: SetNull)
  createdBy                 User?                    @relation("CodeGenCreator", fields: [createdById], references: [id], onDelete: SetNull)
  files                     CodeGenFile[]
  aiRuns                    AiRun[]                  @relation("AiRunCodeGen")

  @@unique([projectId, version])
  @@index([projectId, status])
  @@map("code_gen_snapshots")
}

model CodeGenFile {
  id                String          @id @default(uuid()) @db.Uuid
  codeGenSnapshotId String          @db.Uuid
  filePath          String
  fileName          String
  fileType          CodeGenFileType
  language          String
  content           String
  description       String?
  sortOrder         Int             @default(0)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  codeGenSnapshot   CodeGenSnapshot @relation(fields: [codeGenSnapshotId], references: [id], onDelete: Cascade)

  @@index([codeGenSnapshotId, sortOrder])
  @@map("code_gen_files")
}
