# ─── Database ───────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bolder_scope?schema=public"

# ─── Application ────────────────────────────────────────────
NODE_ENV="development"
PORT=3000
APP_URL="http://localhost:3000"

# ─── JWT & Authentication ───────────────────────────────────
JWT_ACCESS_SECRET="replace-with-strong-access-secret"
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_SECRET="replace-with-strong-refresh-secret"
JWT_REFRESH_TTL_SECONDS=2592000
JWT_EMAIL_VERIFICATION_SECRET="replace-with-strong-email-verification-secret"
JWT_EMAIL_VERIFICATION_TTL_SECONDS=86400
EMAIL_VERIFICATION_URL="http://localhost:3000/api/v1/auth/verify-email"

# ─── CORS & Rate Limiting ──────────────────────────────────
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
THROTTLE_TTL_MS=60000
THROTTLE_LIMIT=100

# ─── Swagger Documentation ─────────────────────────────────
SWAGGER_ENABLED=true
SWAGGER_PATH="docs"
SWAGGER_USERNAME="swagger_admin"
SWAGGER_PASSWORD="change-me-swagger-password"

# ─── SendGrid Email ────────────────────────────────────────
SENDGRID_API_KEY="replace-with-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@example.com"

OPENAI_API_KEY
CLAUDE_API_KEY
ELEVENLABS_API_KEY
STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET
CLOUDFLARE_R2_ENDPOINT
CLOUDFLARE_R2_ACCESS_KEY_ID
CLOUDFLARE_R2_SECRET_ACCESS_KEY
CLOUDFLARE_R2_BUCKET